<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="main.java.com.lms.ui.controller.UserCreationController">
    
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Label text="Create New User" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <GridPane hgap="15" vgap="15">
        <Label text="Full Name:" GridPane.rowIndex="0" />
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Email:" GridPane.rowIndex="1" />
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Role:" GridPane.rowIndex="2" />
        <ComboBox fx:id="roleBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Initial Password:" GridPane.rowIndex="3" />
        <PasswordField fx:id="passwordField" promptText="Enter password" 
                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: transparent; -fx-text-fill: #7f8c8d;"/>
        <Button text="Create User" onAction="#handleSave" 
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
</VBox>