<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="main.java.com.lms.ui.controller.AdminCatalogController"
            stylesheets="@css/styles.css">
    
    <left>
        <fx:include source="components/Sidebar.fxml"/>
    </left>

    <center>
        <VBox spacing="25" styleClass="main-container">
            <padding><Insets top="30" right="40" bottom="30" left="40"/></padding>

            <VBox spacing="5">
                <Label text="Global Course Catalog" styleClass="header-label" />
                <Label text="System-wide course administration and oversight." style="-fx-text-fill: #95a5a6;" />
            </VBox>

            <HBox spacing="15" styleClass="card" alignment="CENTER_LEFT">
                <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
                <TextField fx:id="searchField" promptText="Search by ID, Name, or Instructor..." 
                           HBox.hgrow="ALWAYS" styleClass="search-field"/>
                <ComboBox fx:id="filterBox" prefWidth="180" styleClass="combo-box"/>
                <Button text="Export CSV" styleClass="secondary-button" />
            </HBox>

            <VBox spacing="10" VBox.vgrow="ALWAYS" styleClass="card">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                
                <TableView fx:id="globalTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="80" />
                        <TableColumn fx:id="colName" text="Course Name" prefWidth="250" />
                        <TableColumn fx:id="colInstructor" text="Instructor ID" prefWidth="200" />
                        <TableColumn fx:id="colStudents" text="Enrollment" prefWidth="120" />
                        <TableColumn fx:id="colActions" text="Actions" prefWidth="150" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <placeholder>
                        <Label text="No courses available in the system." />
                    </placeholder>
                </TableView>

                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <padding><Insets top="5" right="5" bottom="5" left="5"/></padding>
                    <Button text="Delete Selected Course" onAction="#handleDeleteCourse" 
                            style="-fx-background-color: transparent; -fx-text-fill: #e74c3c; -fx-cursor: hand; -fx-font-weight: bold;" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>